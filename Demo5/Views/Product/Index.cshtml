@model List<Demo5.Models.ProductDto>
@{
    ViewBag.Title = "Index";
}
<div class="card mb-3">
    <div class="card-header">
        <div class="row flex-between-end">
            <div class="col-auto align-self-center">
                <h5 class="mb-0">Product List</h5>
            </div>
            <div class="col-auto ms-auto">
                <div class="nav nav-pills nav-pills-falcon flex-grow-1" role="tablist">
                    <a class="btn btn-sm active" role="tab" href="/product/AddEdit">
                        <span class="fas fa-plus"></span> Add Product
                    </a>
                </div>
            </div>
        </div>
    </div>



    <div class="card-body pt-0">
        <div class="tab-content">
            <div class="tab-pane preview-tab-pane active">
                <div class="table-responsive scrollbar">
                    <table class="table table-hover table-striped overflow-hidden">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Tittle</th>
                                <th scope="col">Discription</th>
                                <th scope="col">Url</th>
                                <th scope="col">Price</th>
                                <th scope="col">OldPrice</th>
                                <th scope="col">shipping</th>
                                <th scope="col">IsStore</th>
                                <th scope="col">CategoryId</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="align-middle">
                                    <td class="text-nowrap">@item.Name</td>
                                    <td class="text-nowrap">@item.Tittle</td>
                                    <td class="text-nowrap">@item.Description</td>
                                    <td class="text-nowrap">@item.Url</td>
                                    <td class="text-nowrap">@item.Price</td>
                                    <td class="text-nowrap">@item.OldPrice</td>
                                    <td class="text-nowrap">@item.Shipping</td>
                                    <td class="text-nowrap">@item.IsStock</td>
                                    <td class="text-nowrap">@item.CategoryId</td>

                                    <td>



                                        <a href="/Product/AddEdit/@item.Id">Edit</a>
                                        <a href="/Product/Delete/@item.Id">Delete</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
